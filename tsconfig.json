{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@shared/*": [
                "./ft-talk-shared/src/*"
            ],
            "src/*": [
                "./src/*"
            ],
            "*": [
                "node_modules/*"
            ],
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

    },
    "include": [
        "src/**/*",
        "./ft-talk-shared/src/**/*"
    ]
}